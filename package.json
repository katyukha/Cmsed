{
	"name": "cmsed",
	"description": "CMSed provides common components for Vibe. Designed to work as a CMS out of box.",
	"copyright": "Copyright Â© 2014, Richard Andrew Cattermole",
	"authors": ["Richard Andrew Cattermole"],
	"license": "MIT",
	"sourcePaths": [],
    "dependencies": {
        "cmsed:base": "~master"
    },
    "targetPath": "bin/liball",
    "subPackages": [
		{
			"name": "base",
			"sourcePaths": ["source/cmsed/base"],
			"sourceFiles": [
				"tools/timezone/timezones.d",
				"tools/browser_detection/browser_detection.d",
				"tools/mime/mimetypes.d"
			],
			"stringImportPaths": [
				"views/base",
				"tools/browser_detection",
				"tools/mime"
			],
			"targetType": "library",
			"targetPath": "bin/base",
			"versions": ["VibeCustomMain"],
			"dependencies": {
				"vibe-d": "~master",
				"dvorm": "~master"
			}
		},
		{
			"name": "rebuildTools",
			"targetType": "staticLibrary",
			"preGenerateCommands": [
				"cd tools/timezone && rdmd generator cmsed.base.timezones",
				"cd tools/browser_detection && rdmd generator cmsed.base.browser_detection",
				"cd tools/mime && rdmd generator cmsed.base.mimetypes"
			],
			"sourceFiles": [
				"tools/main.d",
			],
			"sourcePaths": []
		},
		{
			"name": "user",
			"sourcePaths": ["source/cmsed/user"],
			"targetType": "library",
			"targetPath": "bin/user",
			"dependencies": {
				"cmsed:base": "~master",
			}
		},
		{
			"name": "test",
			"sourcePaths": ["source/cmsed/test"],
			"targetType": "executable",
			"targetPath": "bin/test",
            "stringImportPaths": ["views/test"],
			"dependencies": {
				"cmsed:base": "~master",
			}
		}
	],
	"buildTypes": {
		"docs": {
			"dflags": [
				"-op",
				"-Dddocs",
				"-o-",
				"-c", 
				"-Hdimport"
			],
			"dependencies": {
				"cmsed:base": "~master",
				"cmsed:user": "~master"
			}
		}
	}
}
